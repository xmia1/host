
<%= link_to 'New Post', new_post_path,{ :class=>"btn btn-primary btn-lg" }  %>

<h1>All posts</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <% if post.mark_work_in_progress %>
        <td class="post-in-wip" title="Post is 'work in progress' state, won't be published.">WIP: <%= post.name %></td>
      <% else %>
        <td><%= post.name %></td>
      <% end %>  
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts %>

<br>
